<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- 全局字体大小 -->
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeNormal">14</sys:Double>
    <sys:Double x:Key="FontSizeLarge">18</sys:Double>

    <!-- 全局字体家族 -->
    <FontFamily x:Key="GlobalFontFamily">Microsoft YaHei</FontFamily>

    <!-- 全局 TextBlock 样式（可选） -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
        <Setter Property="FontFamily" Value="{StaticResource GlobalFontFamily}" />
    </Style>
</ResourceDictionary>
